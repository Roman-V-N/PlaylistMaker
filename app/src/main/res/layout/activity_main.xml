<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".MainActivity">


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      tools:ignore="MissingConstraints"
      android:paddingBottom = "20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "@string/app_name"
        android:textColor="@color/white"
        android:layout_marginStart="@dimen/marginStart16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:typeface="normal"
        android:textSize="22sp"/>


    <Button
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight = "1"
        android:layout_marginTop="@dimen/marginTop30dp"
        android:layout_marginStart="@dimen/marginStart16dp"
        android:layout_marginEnd="@dimen/marginEnd16dp"
        android:backgroundTint="@color/white"
        android:text="@string/search"
        android:typeface="normal"
        android:textColor="@color/black"
        app:cornerRadius="@dimen/cornerRadius16dp"
        app:icon="@drawable/search"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/iconPadding8dp"
        app:iconTint="@color/black"
        tools:ignore="MissingConstraints" />

    <Button
          android:id="@+id/library"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight = "1"
          android:backgroundTint="@color/white"
          android:layout_marginTop="@dimen/marginTop8dp"
          android:layout_marginStart="@dimen/marginStart16dp"
          android:layout_marginEnd="@dimen/marginEnd16dp"
          app:icon="@drawable/library"
          android:text="@string/library"
          android:typeface="normal"
          android:textColor="@color/black"
          app:iconGravity="textStart"
          app:iconPadding="@dimen/iconPadding8dp"
          app:iconTint="@color/black"
          app:cornerRadius="@dimen/cornerRadius16dp"
          tools:ignore="MissingConstraints" />

      <Button
          android:id="@+id/settings"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight = "1"
          android:backgroundTint="@color/white"
          android:layout_marginTop="@dimen/marginTop8dp"
          android:layout_marginStart="@dimen/marginStart16dp"
          android:layout_marginEnd="@dimen/marginEnd16dp"
          app:icon="@drawable/settings"
          android:text="@string/setting"
          android:typeface="normal"
          android:textColor="@color/black"
          app:iconGravity="textStart"
          app:iconPadding="@dimen/iconPadding8dp"
          app:iconTint="@color/black"
          app:cornerRadius="@dimen/cornerRadius16dp"
          tools:ignore="MissingConstraints" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>



