<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Search"
    android:background="?attr/colorSecondaryVariant"
    android:theme="@style/Base.Theme.PlaylistMaker"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout style="@style/LinearLayoutSettingHorizontal">

            <ImageView
                android:id="@+id/back_main"
                style="@style/ImageViewTopBar" />

            <TextView
                style="@style/TextViewTopBar"
                android:text="@string/search" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/marginTop30dp"
            tools:ignore="MissingConstraints">


            <EditText
                android:id="@+id/search_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginStart16dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_edit"
                android:drawableStart="@drawable/search"
                android:drawablePadding="8dp"
                android:drawableTint="?attr/colorSecondary"
                android:fontFamily="@font/ys_display_medium"
                android:hint="@string/search"
                android:inputType="textCapSentences"
                android:lines="1"
                android:padding="12dp"
                android:textColor="@color/black02"
                android:textColorHint="?attr/colorSecondary"
                android:textSize="16sp"
                android:textCursorDrawable="@drawable/edit_cursor"/>

            <ImageView
                android:id="@+id/clear_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/clear"
                android:visibility="gone"
                android:layout_marginTop="86dp"
                android:layout_marginEnd="32dp"
                app:tint="@color/black02"
                />


           </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>