<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondaryVariant"
    android:theme="@style/Base.Theme.PlaylistMaker"
    tools:context=".SettingsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/back_main"
                style="@style/MaterialToolbarMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:navigationIcon="@drawable/arrow_back"
                app:title="@string/setting" />

        </com.google.android.material.appbar.AppBarLayout>


        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/theme_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="20dp"
            android:text="@string/dark_theme"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/text_16sp"
            app:thumbTint="?attr/colorPrimaryVariant" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/share_app"
            style="@style/MaterialTextViewSettingMenu"
            android:drawableEnd="@drawable/share"
            android:text="@string/share_app" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/support"
            style="@style/MaterialTextViewSettingMenu"
            android:drawableEnd="@drawable/support"
            android:text="@string/support" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/user_agreement"
            style="@style/MaterialTextViewSettingMenu"
            android:drawableEnd="@drawable/arrow_forward"
            android:text="@string/user_agreement" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
