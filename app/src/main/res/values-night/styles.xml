<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonMainScreen" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/marginTop8dp</item>
        <item name="android:layout_marginStart">@dimen/marginStart16dp</item>
        <item name="android:layout_marginEnd">@dimen/marginEnd16dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">@dimen/cornerRadius16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/iconPadding8dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="TrackArtistTime">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="ErrorWrongImage">
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:paddingTop">@dimen/padding_top_error_image</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_error_image</item>
        <item name="android:src">@drawable/error_nothing_dm</item>
    </style>

    <style name="ErrorInternetImage">
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:paddingTop">@dimen/padding_top_error_image</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_error_image</item>
        <item name="android:src">@drawable/error_internet_dm</item>
    </style>

</resources>
