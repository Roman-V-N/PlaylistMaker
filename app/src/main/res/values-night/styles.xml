<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name = "ButtonMainScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/marginTop8dp</item>
        <item name="android:layout_marginStart">@dimen/marginStart16dp</item>
        <item name="android:layout_marginEnd">@dimen/marginEnd16dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">@dimen/cornerRadius16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/iconPadding8dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name = "LinearLayoutSettingHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name = "TextViewSettingMenu">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">@dimen/marginStart16dp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name = "ImageViewSettingMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding12dp</item>
    </style>


</resources>
