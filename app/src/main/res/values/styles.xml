<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonMainScreen" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/marginTop8dp</item>
        <item name="android:layout_marginStart">@dimen/marginStart16dp</item>
        <item name="android:layout_marginEnd">@dimen/marginEnd16dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">@dimen/cornerRadius16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/iconPadding8dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="MaterialTextViewSettingMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/size_16dp</item>
        <item name="android:paddingVertical">@dimen/size_20dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="MaterialToolbarMenu">
        <item name="android:textSize">@dimen/size_22dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorSecondaryVariant</item>
    </style>

    <style name="TrackArtistTime">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="titleTextColor">@color/gray</item>
    </style>

    <style name="ErrorText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="ErrorWrongImage">
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:paddingTop">@dimen/padding_top_error_image</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_error_image</item>
        <item name="android:src">@drawable/error_nothing_lm</item>
    </style>

    <style name="ErrorInternetImage">
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:paddingTop">@dimen/padding_top_error_image</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_error_image</item>
        <item name="android:src">@drawable/error_internet_lm</item>
    </style>


</resources>
